@model List<ProjectDefinition.Models.Project>
@{
    ViewBag.Title = "AllProject";
    Layout = "~/Views/_Layout.cshtml";
}



<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Proje Listesi</div>

    <!-- Table -->
    <table class="table">
        <tr>
            <th>Proje Kodu</th>
            <th>Proje Adı</th>  
            <th>
               
            </th>            
        </tr>
        @foreach (var item in Model)
        {  
        <tr>
            <td>
                @item.ProjectCode
            </td>
            <td>
               @item.NickName
            </td>
            <td>
                <button class="btn btn-success" onclick="AddService('@item.ProjectCode')">Servis Ekle</button>
            </td>
        </tr>
        }
        
    </table>
</div>
<script>
    function AddService(ProjectCode) {
        location.href = "AddService?ProjectCode=" + ProjectCode;
    }
</script>